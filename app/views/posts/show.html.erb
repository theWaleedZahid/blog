<div id="post_content">
	<h1 class="title"><%= @post.title %></h1>
	<p class="date">
		Submitted <%= time_ago_in_words(@post.created_at) %> Ago By <%= link_to @post.user.email, users_path(@post.user.id)%>
		<% if user_signed_in? %>
		| <%= @post.get_upvotes.size==1 ? @post.get_upvotes.size.to_s + " Like | ": @post.get_upvotes.size.to_s + " Likes | " %>  <%= link_to "Like", like_post_path(@post), method: :put %>
		| <%= link_to "Dislike", dislike_post_path(@post), method: :put %>
		<% end %>
		<% if @post.user == current_user %>
		| <%= link_to 'Edit', edit_post_path(@post) %> |
		  <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
	  <% end %>
	  | Post ID:<%= @post.id %>
	</p>
	<p class="body"><%= @post.body %></p>

		<div id="comments">
			<% if user_signed_in? %>
			<h2><%= @post.comments.count %> Comments</h2>
			<%= render @post.comments %>
			<h3>Add a Comment:</h3>
			<%= render "comments/form" %>
		<% else %>
			Please Login
		<% end %>	
		</div>
	</div>
</div>